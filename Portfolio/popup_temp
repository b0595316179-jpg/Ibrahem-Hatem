    <!-- GSAP CDN -->
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <style>
        /* General Styles & Dark Mode Setup */
        :root {
            --bg-color: #121212;
            --surface-color: #1e1e1e;
